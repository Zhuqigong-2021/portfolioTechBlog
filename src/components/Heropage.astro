---
import logos from '../images/framework-logos.png';
import logosSmall from '../images/framework-logos-small.png';
export interface Props {
  heading?: string;
  text?: string;
  showExtra?: boolean;
}
const {
  heading = 'Welcome To  Portforlio website',
  text = ' For your convenience , call me Phil for short . I am from Montreal .',
  showExtra = false,
} = Astro.props as Props;
---

<section class="showcase">
  <div class="showcase-text">
    <h1 class="md:text-[50px] text-[30px] font-black mb-[20px]">{heading}</h1>
    <p class="text-sm mb-[20px] flex-wrap">
      {text}
    </p>
    <button
      class="px-4 py-2 mb-[1rem] bg-[#0f172a] opacity-[0.8] rounded-md hover:opacity-100"
      >learn more</button
    >
  </div>

  {
    showExtra && (
      <>
        <div class="showcase-img">
          <img class="logos" src={logos} alt="" />
          <img class="logos-small" src={logosSmall} alt="" />
        </div>
      </>
    )
  }
</section>

